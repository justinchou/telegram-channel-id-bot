{
  "name": "telegram-channel-id-bot",
  "version": "1.0.0",
  "description": "A Telegram bot to get chat ID information from groups and chats",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:clean": "rm -rf dist && tsc",
    "build:watch": "tsc --watch",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "dev": "ts-node --transpile-only src/index.ts",
    "dev:watch": "ts-node --transpile-only --watch src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPatterns=integration",
    "test:unit": "jest --testPathPatterns=unit",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "lint:fix": "eslint src/**/*.ts tests/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist coverage",
    "prebuild": "npm run clean && npm run typecheck",
    "prestart": "npm run build",
    "prepare": "npm run build",
    "setup": "bash scripts/setup.sh",
    "deploy:dev": "bash scripts/deploy.sh development",
    "deploy:prod": "bash scripts/deploy.sh production",
    "health": "bash scripts/health-check.sh",
    "docker:build": "docker build -t telegram-channel-id-bot .",
    "docker:run": "docker run -d --name telegram-channel-id-bot --env-file .env.production -p 3000:3000 telegram-channel-id-bot",
    "docker:stop": "docker stop telegram-channel-id-bot && docker rm telegram-channel-id-bot",
    "docker:logs": "docker logs -f telegram-channel-id-bot"
  },
  "packageManager": "yarn@1.22.0",
  "keywords": [
    "telegram",
    "bot",
    "chat-id",
    "channel-id",
    "nodejs",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.3.1",
    "telegraf": "^4.16.3",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^24.3.0",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
