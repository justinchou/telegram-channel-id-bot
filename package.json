{
  "name": "telegram-chat-id-bot",
  "version": "1.0.0",
  "description": "A Telegram bot to get chat ID information from groups and chats",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "NODE_OPTIONS='--loader=ts-node/esm' jest",
    "test:watch": "NODE_OPTIONS='--loader=ts-node/esm' jest --watch",
    "test:coverage": "NODE_OPTIONS='--loader=ts-node/esm' jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "keywords": [
    "telegram",
    "bot",
    "chat-id",
    "nodejs",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/winston": "^2.4.4",
    "dotenv": "^16.3.1",
    "telegraf": "^4.16.3",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
